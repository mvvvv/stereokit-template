        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'stereokit-rust-gradle-template'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=stereokit_rust_gradle_template"
                ],
                "filter": {
                    "name": "stereokit-template",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            // For Windows only, we have to find the dll >>>>>
            "env":{"PATH": "${workspaceFolder}/target/debug/deps;${env:PATH}"},

        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug with simulator",
            "cargo": {"args":  [
                "build", "--manifest-path", "${fileDirname}/../Cargo.toml"
            ], },
            "args": ["--test"],
            "cwd": "${workspaceFolder}",
            // For Windows only, we have to find the dll >>>>>
            "env":{"PATH": "${workspaceFolder}/target/debug/deps;${env:PATH}"},

        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug with PC headset",
            "cargo": {"args":  [
                "build", "--manifest-path", "${fileDirname}/../Cargo.toml"
            ], },
            "args": [],
            "cwd": "${workspaceFolder}",
            // For Windows only, we have to find the dll >>>>>
            "env":{"PATH": "${workspaceFolder}/target/debug/deps;${env:PATH}"},
        },

    ]
